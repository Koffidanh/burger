<div class="container">
  <h1 class="d-flex justify-content-center">EAT-DA-BURGERS!</h1>
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers Waiting to Be Eaten!</h2>
    </div>
    <div class="col-md-6">
      <h2>Burgers that have Been Devoured!</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <ol>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ol>
    </div>
    <div class="col-md-6">
      <ol>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgerdevoured-block devoured=false}}
        {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2>Add a Burger</h2>
      <form id="create-form">

        <div class="form-group">
          <label for="bu"><h5>Burger Name:</h5></label>
          <input type="text" id="bu" name="name">
        </div>

        <button type="submit"><i class='fas fa-hamburger' style='font-size:24px;color:red'></i> Add Burger</button>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>

</div>